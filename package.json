{
  "name": "twitch-node-auth-provider",
  "version": "0.1.0",
  "license": "MIT",
  "description": "Obtain auth tokens for Twitch using an Node HTTP server popup.",
  "author": "skarab42 <contact@skarab42.dev>",
  "types": "dist/@types/index.d.ts",
  "main": "dist/cjs/index.js",
  "module": "dist/mjs/index.js",
  "exports": {
    "import": "./dist/mjs/index.js",
    "require": "./dist/cjs/index.js"
  },
  "scripts": {
    "clean": "rimraf dist",
    "dev": "tsc -w -p tsconfig-cjs.json",
    "prebuild": "yarn clean",
    "build:mjs": "tsc -p tsconfig.json",
    "build:cjs": "tsc -p tsconfig-cjs.json",
    "build": "yarn build:mjs && yarn build:cjs",
    "postbuild": "node postbuild.js",
    "test": "jest",
    "test:coverage": "yarn test --collect-coverage",
    "prepublishOnly": "yarn build"
  },
  "dependencies": {
    "open": "^8.2.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.1",
    "@types/rimraf": "^3.0.2",
    "@types/uuid": "^8.3.1",
    "fs-extra": "^10.0.0",
    "jest": "^27.0.6",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.5",
    "twitch": "^4.6.5",
    "twitch-auth": "^4.6.5",
    "typescript": "^4.3.5"
  },
  "peerDependencies": {
    "twitch": "^4.6.5",
    "twitch-auth": "^4.6.5"
  }
}
